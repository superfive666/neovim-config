{
  "languageserver": {
    "go": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "trace.server": "verbose",
      "filetypes": ["go"]
    }
  },

  "java.home": "/opt/homebrew/opt/openjdk@17",
  "java.import.maven.enabled": true,
  "java.completion.overwrite": false,
  "java.format.onType.enabled": true,
  "java.completion.guessMethodArguments": true,
  "java.codeGeneration.useBlocks": true,
  "java.errors.incompleteClasspath.severity": "ignore",
  "java.signatureHelp.enabled": true,
  "java.format.settings.url": "https://raw.githubusercontent.com/google/styleguide/gh-pages/eclipse-java-google-style.xml",
  "java.maven.downloadSources": true,
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-17",
      "path": "/opt/homebrew/opt/openjdk@17",
      "default": true
    }
  ],

  "eslint.packageManager": "yarn",
  "eslint.nodePath": ".yarn/sdks",
  "workspace.workspaceFolderCheckCwd": false,
  "tsserver.tsdk": ".yarn/sdks/typescript/lib",

  "python.sortImports.path": "/usr/bin/isort",
  "pyright.enable": true,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.pythonPath": "/usr/bin/python3",
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Path": "/Users/chao.wu/Library/Python/3.8/bin/autopep8",
  "python.formatting.autopep8Args": [
    "--max-line-length=100",
    "--indent-size=2",
    "--ignore=E121"
  ]
}
